<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside" decoration-info="True">
                <field name="previous_qty" string='Pre qty' optional="show"/>
                <field name="previous_percentage" string='Pre %' optional="show"/>
                <field name="completion_percentage" string='%of Complete' style="width: 500px;" optional="show"/>
                <field name="total_qty" string='total qty' optional="show"/>


                <field name="comulative_invoice" readonly="1" string='comulative invoice' style="width: 50px;" optional="show"/>

                <field name="price_subtotal" string='subtotal' invisible="1"/>
                <field name="price_subtotal" string='current subtotal' optional="show"/>
            </xpath>
             <xpath expr="//field[@name='quantity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/form" position="inside">
                <field name="completion_percentage"/>
                <field name="total_qty"/>

            </xpath>

        </field>
    </record>

    <record id="view_move_form2_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <field name="partner_id" position="after">
                <field name="construction"  />
                  <field name="inv_num_con"
                               attrs="{'invisible': [('construction', '=', False)]}"/>
            </field>
        </field>
    </record>








</odoo>
